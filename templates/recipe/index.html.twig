{% extends 'base.html.twig' %}

{% block title %}Hello RecipeController!{% endblock %}

{% block body %}

    <main class="container">
        <h1>Liste des recettes</h1>

        {% for recipe in recipes %}
            <div class="row">
                <div class="col s12 m7">
                    <div class="card">
                        <div class="card-image">
                            <img src="{{ vich_uploader_asset(recipe, 'imageFile') }}">
                            <span class="card-title">{{ recipe.name }}</span>
                        </div>
                        <div class="card-content">
                            <ul class="collection">
                                {% for item in recipe.recetteIngredients %}
                                    <li class="collection-item">{{ item.quantity ~ item.ingredient.unit ~ ' ' ~ item.ingredient.label }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </main>

{% endblock %}